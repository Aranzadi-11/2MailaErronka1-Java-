<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="erronkon.FinantzakController"
      prefHeight="700" prefWidth="1000">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="FINANTZEN KUDEAKETA"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <GridPane hgap="15" vgap="15" style="-fx-padding: 20 0 20 0;">
        <Label text="BILATU DATA:" GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <DatePicker fx:id="dataPicker"
                    prefWidth="200" prefHeight="40"
                    GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="GUZTIRA:" GridPane.rowIndex="0" GridPane.columnIndex="2"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextField fx:id="guztiraField"
                   editable="false"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #e74c3c; -fx-background-color: #f8f9fa; -fx-border-color: #e74c3c; -fx-pref-width: 200; -fx-pref-height: 40;"
                   GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Button text="ERAKUTSI GUZTIA"
                onAction="#erakutsiDenak"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 150; -fx-pref-height: 40;"
                GridPane.rowIndex="1" GridPane.columnIndex="3"/>
    </GridPane>

    <HBox style="-fx-padding: 0 0 10 0;">
        <Label fx:id="totalTransakzioakLabel"
               text="0 transakzio"
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
    </HBox>

    <TableView fx:id="tableView" VBox.vgrow="ALWAYS" style="-fx-font-size: 14px;">
        <columns>
            <TableColumn fx:id="eskaeraDataColumn" text="ESKAERA DATA" prefWidth="350">
                <cellValueFactory>
                    <PropertyValueFactory property="eskaeraData" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="guztiraColumn" text="GUZTIRA (â‚¬)" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="guztira" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>