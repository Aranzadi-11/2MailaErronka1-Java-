<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="erronkon.LangileakController"
      prefHeight="600" prefWidth="900">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="LANGILEEN KUDEAKETA"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <TableView fx:id="tableView" VBox.vgrow="ALWAYS" style="-fx-font-size: 14px;">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="id" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="izenaColumn" text="IZENA (OSOA)" prefWidth="250">
                <cellValueFactory>
                    <PropertyValueFactory property="izena" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="erabiltzaileaColumn" text="ERABILTZAILEA" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="erabiltzailea" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="aktiboColumn" text="AKTIBOA" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="aktibo" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="rolaColumn" text="ROLA ID" prefWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="rolaId" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="erregistroColumn" text="ERREGISTRO DATA" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="erregistroData" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <GridPane hgap="15" vgap="15" style="-fx-padding: 20 0 0 0;">
        <Label text="Izena (Osoa):" GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="izenaField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                   prefWidth="300" prefHeight="35"/>

        <Label text="Erabiltzailea:" GridPane.rowIndex="0" GridPane.columnIndex="2"
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="erabiltzaileaField" GridPane.rowIndex="0" GridPane.columnIndex="3"
                   prefWidth="300" prefHeight="35"/>

        <Label text="Pasahitza:" GridPane.rowIndex="1" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="pasahitzaField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                   prefWidth="300" prefHeight="35"/>

        <Label text="Rola ID:" GridPane.rowIndex="1" GridPane.columnIndex="2"
               style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="rolaComboBox" GridPane.rowIndex="1" GridPane.columnIndex="3"
                  prefWidth="300" prefHeight="35"/>

        <Label text="Aktibo:" GridPane.rowIndex="2" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="aktiboComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"
                  prefWidth="300" prefHeight="35"/>
    </GridPane>

    <HBox spacing="20" style="-fx-padding: 30 0 0 0; -fx-alignment: center;">
        <Button fx:id="gehituBtn" text="GEHITU"
                onAction="#gehituLangilea"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 120; -fx-pref-height: 40;"/>

        <Button fx:id="editatuBtn" text="EDITATU"
                onAction="#editatuLangilea"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 120; -fx-pref-height: 40;"/>

        <Button fx:id="ezabatuBtn" text="EZABATU"
                onAction="#ezabatuLangilea"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 120; -fx-pref-height: 40;"/>

        <Button fx:id="garbituBtn" text="GARBITU"
                onAction="#garbituEremuak"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 120; -fx-pref-height: 40;"/>
    </HBox>
</VBox>