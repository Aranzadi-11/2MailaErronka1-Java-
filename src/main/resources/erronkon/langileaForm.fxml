<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="erronkon.LangileaFormController" spacing="10" alignment="CENTER" prefWidth="400" prefHeight="350">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Langilea Formularioa" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Izena:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="izenaField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Erabiltzailea:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="erabiltzaileaField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Pasahitza:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="pasahitzaField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Aktibo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="aktiboCombo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Rola:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="rolaCombo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Gorde" fx:id="gordeBtn" onAction="#gordeLangilea"/>
        <Button text="Itxi" fx:id="itxiBtn" onAction="#itxiLeihoa"/>
    </HBox>
</VBox>
