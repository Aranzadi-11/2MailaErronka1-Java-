<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="erronkon.LoginController"
      prefWidth="350" prefHeight="400">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <ImageView fitWidth="150" fitHeight="150" preserveRatio="true">
        <image>
            <Image url="@images/ABEJ_logo.png"/>
        </image>
    </ImageView>


    <Label text="ABEJ" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label text="Login" style="-fx-font-size: 16px;"/>

    <TextField fx:id="erabiltzaileaField" promptText="Erabiltzailea"/>
    <PasswordField fx:id="pasahitzaField" promptText="Pasahitza"/>
    <Label fx:id="infoLabel" textFill="red"/>
    <Button text="Sartu" onAction="#sartu" style="-fx-background-color: #FFD700; -fx-text-fill: black;"/>

</VBox>
