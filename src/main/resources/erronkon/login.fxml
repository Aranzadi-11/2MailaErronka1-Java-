<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="erronkon.LoginController">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <Label text="Login" style="-fx-font-size: 18px;"/>

    <TextField fx:id="erabiltzaileaField" promptText="Erabiltzailea"/>
    <PasswordField fx:id="pasahitzaField" promptText="Pasahitza"/>
    <Label fx:id="infoLabel" textFill="red"/>
    <Button text="Sartu" onAction="#sartu"/>
</VBox>
